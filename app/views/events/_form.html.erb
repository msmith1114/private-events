<%= form_for(@event) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_area :description, size: "5x5", class: 'form-control' %>

  <%= f.label :date %>
  <%= f.date_field :date, class: 'form-control' %>

  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>
